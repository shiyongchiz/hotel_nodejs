<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" href="image/favicon.png" type="image/png">
    <title>Claudion hotel</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="vendors/linericon/style.css">
    <link rel="stylesheet" href="css/font-awesome.min.css">
    <link rel="stylesheet" href="vendors/bootstrap-datepicker/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" href="vendors/nice-select/css/nice-select.css">
    <link rel="stylesheet" href="vendors/owl-carousel/owl.carousel.min.css">
    <!-- main css -->
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/responsive.css">
</head>

<body>
    <%- include('./include/header.ejs') %>

        <!--================Breadcrumb Area =================-->
        <section class="breadcrumb_area">
            <div class="overlay bg-parallax" data-stellar-ratio="0.8" data-stellar-vertical-offset="0"
                data-background=""></div>
            <div class="container">
                <div class="page-cover text-center">
                    <h2 class="page-cover-tittle">Room</h2>
                    <ol class="breadcrumb">
                        <li><a href="/">Home</a></li>
                        <li class="active">Room</li>
                    </ol>
                </div>
            </div>
        </section>
        <!--================Breadcrumb Area =================-->

        <%- include('./include/hotRoom.ejs') %>

            <!--================ Accomodation Area  =================-->
            <section class="accomodation_area section_gap">
                <div class="container">
                    <div class="section_title text-center">
                        <h2 class="title_color">All Accomodation</h2>
                        <p>We all live in an age that belongs to the young at heart. Life that is becoming extremely
                            fast,</p>
                    </div>
                    <div class="row accomodation_two">
                        <% for(let i=0;i< rooms.length ; i++){ %>
                            <div class="col-lg-3 col-sm-6">
                                <div class="accomodation_item text-center">
                                    <div class="hotel_img">
                                        <img src="image/<%= rooms[i].image %>" alt="">
                                        <a href="/room/book-room?roomId=<%= rooms[i].id %>" class="btn theme_btn button_hover">Book Now</a>
                                    </div>
                                    <a href="#">
                                        <h4 class="sec_h4"><%= rooms[i].roomName %></h4>
                                    </a>
                                    <h5>$<%= rooms[i].price %><small>/night</small></h5>
                                </div>
                            </div>
                            <% }%>
                    </div>
                </div>
            </section>
            <!--================ Accomodation Area  =================-->
            <%- include('./include/footer.ejs') %>



                <!-- Optional JavaScript -->
                <!-- jQuery first, then Popper.js, then Bootstrap JS -->
                <script src="js/jquery-3.2.1.min.js"></script>
                <script src="js/popper.js"></script>
                <script src="js/bootstrap.min.js"></script>
                <script src="vendors/owl-carousel/owl.carousel.min.js"></script>
                <script src="js/jquery.ajaxchimp.min.js"></script>
                <script src="vendors/bootstrap-datepicker/bootstrap-datetimepicker.min.js"></script>
                <script src="vendors/nice-select/js/jquery.nice-select.js"></script>
                <script src="js/mail-script.js"></script>
                <script src="js/stellar.js"></script>
                <script src="vendors/lightbox/simpleLightbox.min.js"></script>
                <script src="js/custom.js"></script>
</body>

</html>