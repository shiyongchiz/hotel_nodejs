<!--================ Accomodation Area  =================-->
<section class="accomodation_area section_gap">
    <div class="container">
        <div class="section_title text-center">
            <h2 class="title_color">Hot Accomodation</h2>
            <p>We all live in an age that belongs to the young at heart. Life that is becoming extremely fast,
            </p>
        </div>
        <div class="row mb_30">
            <% for(let i=0;i< rooms.length ; i++) { if(rooms[i].hot==1){ %>
                <div class="col-lg-3 col-sm-6">
                    <div class="accomodation_item text-center">
                        <div class="hotel_img">
                            <img src="image/<%= rooms[i].image %>" alt="">
                            <a href="/room/book-room?roomId=<%= rooms[i].id %>" class="btn theme_btn button_hover">Book Now</a>
                        </div>
                        <a href="#">
                            <h4 class="sec_h4">
                                <%= rooms[i].roomName %>
                            </h4>
                        </a>
                        <h5>$<%= rooms[i].price %><small>/night</small></h5>
                    </div>
                </div>
                <% }}%>
        </div>
    </div>
</section>
<!--================ Accomodation Area  =================-->