<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="../../assets/css/user/display.css"  >
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<style>
  .btn-edit{
  outline: none;
  background: orange;
  height: 25px;
  width: 60px;
  border-radius: 3px;
  cursor: pointer;
}
.btn-delete{
  outline: none;
  background: red;
  height: 25px;
  width: 60px;
  border-radius: 3px;
  cursor: pointer;
}
</style>
<body>

  <div class="container">
    <h2>All Users Table</h2>
    <table class="table table-dark">
      <thead>
        <tr>
          <th>ID</th>
          <th>User name</th>
          <th>Email</th>
          <th>Phone number</th>
          <th>Address</th>
          <th>Edit</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i=0;i< data.length ; i++) {  %>
          <tr>
            <td><%= data[i].id %></td>
            <td><%= data[i].userName %></td>
            <td><%= data[i].email %></td>
            <td><%= data[i].address %></td>
            <td><%= data[i].phone %></td>
            <td>
              <a href="update-user?id=<%= data[i].id%>"  class="btn-edit" type="button">Edit</a>
              <a href="delete-user?id=<%= data[i].id%>" class="btn-delete" type="button">Delete</a>
            </td>
          </tr>
          <% }%>
      </tbody>
    </table>
  </div>

</body>

</html>